---
import { getImageUrl } from '../backend.mjs';
import { Image } from "astro:assets";

const {
  record,
  recordImage,
  width = 400,   // valeur par défaut
  height = 300,  // valeur par défaut
} = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{imageURL && 
    <Image
        src={imageURL}
        alt={record.nomMaison || 'Image'}
        width={width}
        height={height}
    />
}

